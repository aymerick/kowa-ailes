<div class="jumbotron">
    <div class="container">
        {{#if cover}}
            <div class="row">
                <div class="col-md-6">
                    <h1 class="title">{{title}}</h1>
                    <p class="description">
                        {{tagline}}
                    </p>
                </div>
                <div class="col-md-6">
                    <img src="{{cover.large}}" alt="{{t "cover"}}" class="img-responsive cover" />
                </div>
            </div>
        {{else}}
            <h1 class="title">{{title}}</h1>
            <p class="description">
                {{tagline}}
            </p>
        {{/if}}
    </div>
</div>
